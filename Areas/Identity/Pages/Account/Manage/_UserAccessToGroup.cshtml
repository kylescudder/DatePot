@model List<DatePot.Areas.Identity.Models.Identity.UserAccessToGroup>
<form method="POST" asp-page-handler="UserGroupUpdated">
    @foreach (var item in Model)
    {
        <div class="row mt-3">
            <div class="col">
                <label class="control-label">@item.PotName</label>
            </div>
            <div class="col">
                <input asp-for="@item.AccessGranted" PotID="@item.PotID" checked="@item.AccessGranted" type="checkbox" class="form-control" />
            </div>
        </div>
    }
    <button type="submit" class="btn btn-primary" >Save</button>
</form>