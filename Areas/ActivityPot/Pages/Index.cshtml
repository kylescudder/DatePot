@page
@model DatePot.Areas.ActivityPot.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="row">
    <div class="col-12">
        <button type="button" class="btn btn-primary btnAddActivityModal" data-toggle="modal" data-target="#AddActivityModal">Add Activity</button>
        <button type="button" class="btn btn-primary float-right btnRandomActivity" data-toggle="modal" data-target="#RandomActivityModal">Give me a Activity</button>
    </div>
</div>
<div class="row pt-2">
    <div class="col-12">
        <button type="button" class="btn btn-primary btnAddActivityType" data-toggle="modal" data-target="#AddActivityTypeModal">Add Activity Type</button>
    </div>
</div>
<div class="row pt-4">
    <div class="col-12">
        <table id="ActivityTable" class="table table-striped table-responsive table-stripedFoodPot table-borderless ClientSearchTable foodrows">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Expense</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Prebook?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Activitys)
                {
                <tr>
                    <td>
                        @item.ActivityName
                    </td>
                    <td>
                        @item.Location
                    </td>
                    <td>
                        @item.ExpenseText
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.ActivityType
                    </td>
                    <td>
                        @item.Prebook
                    </td>
                    <td>
                        <a asp-page="/View" asp-route-Id="@item.ActivityID">View</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="RandomActivityModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @*<label>Pick a meal time</label>
                <select asp-items="Model.When" class="form-control ddlWhenRandomActivity" onchange="return RandomActivity()" data-placeholder="Choose a genre..." required="required"></select>
                <div class="divRandomActivity"></div>*@
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AddActivityModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Activity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div lcass="form-group">
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="NewActivity.ActivityName" class="control-label"></label>
                                <input asp-for="NewActivity.ActivityName" class="form-control NewActivityActivityName" type="text" />
                                <span asp-validation-for="NewActivity.ActivityName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="NewActivity.Location" class="control-label"></label>
                                <input asp-for="NewActivity.Location" class="form-control NewActivityLocation" type="text" />
                                <span asp-validation-for="NewActivity.Location" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="NewActivity.Description" class="control-label"></label>
                                <input asp-for="NewActivity.Description" class="form-control NewActivityDescription" type="text" />
                                <span asp-validation-for="NewActivity.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="NewActivity.ExpenseID" class="control-label"></label>
                                <select asp-items="Model.Expense" class="form-control custom-select NewActivityExpenseID" required="required"></select>
                                <span asp-validation-for="NewActivity.ExpenseID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col-3">
                                <label asp-for="NewActivity.Prebook" class="control-label"></label>
                            </div>
                            <div class="col-9">
                                <input asp-for="NewActivity.Prebook" class="form-control NewActivityPrebook" />
                                <span asp-validation-for="NewActivity.Prebook" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label class="control-label">Type</label>
                                <select asp-items="Model.ActivityType" class="form-control ddlActivityType form-control-chosen" multiple data-placeholder="Choose a type..." required="required"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="button" value="Add" class="btn btn-primary btnAddActivity" />
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="AddActivityTypeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Activity Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
